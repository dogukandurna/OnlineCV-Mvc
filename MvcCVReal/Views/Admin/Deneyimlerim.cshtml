@using MvcCVReal.Models.Entity
@model List<TblExperience>

@{
    ViewData["Title"] = "Deneyim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<h1>Deneyimlerim</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>İş Yeri Adı</th>
        <th>Ünvan</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var exps in Model)
    {
        <tr>
            <td>@exps.Id</td>
            <td>@exps.İşYeriAdı</td>
            <td>@exps.Ünvan</td>
            <td>@exps.Aciklama</td>
            <td>@exps.Tarih</td>
            <td><a class="btn btn-danger btn-sm" href="/Admin/DeneyimSil/@exps.Id"><i class="fas fa-trash"></i>Sil</a></td>
            <td><a class="btn btn-info btn-sm" href="/Admin/DeneyimGüncelle/@exps.Id"><i class="fas fa-pencil-alt"></i>Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Admin/YeniDeneyimEkle/" class="btn btn-primary">Yeni Deneyim Ekle</a>