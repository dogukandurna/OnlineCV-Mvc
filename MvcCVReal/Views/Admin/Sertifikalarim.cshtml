@using MvcCVReal.Models.Entity
@model List<TblCertification>
@{
    ViewData["Title"] = "Sertifikalarim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>Sertifikalarım</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Sertifika Adı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var cers in Model)
    {
        <tr>
            <td>@cers.Id</td>
            <td>@cers.SertifikaAd</td>
            <td><a class="btn btn-danger btn-sm" href="/Admin/SertifikaSil/@cers.Id"><i class="fas fa-trash"></i>Sil</a></td>
            <td><a class="btn btn-info btn-sm" href="/Admin/SertifikaGüncelle/@cers.Id"><i class="fas fa-pencil-alt"></i>Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Admin/YeniSertifikaEkle/" class="btn btn-primary">Yeni Sertifika Ekle</a>